---
import Layout from '@layouts/Layout.astro';
import { localizePath } from 'astro-i18next';
import { changeLanguage } from 'i18next';

changeLanguage('en');

const title = 'Error 404';
---

<Layout title="404" title="Tikloader Downloader title" description="TikLoader is the best downloader">
    <section class="flex items-center h-full p-16">
        <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
            <div class="max-w-md text-center">
                <h2 class="mb-8 font-bold text-9xl">
                    <span class="sr-only">Error</span>
                    <span class="text-gray-200">404</span>
                </h2>
                <p class="text-3xl font-semibold md:text-3xl text-gray-200">Sorry, we couldn't find this page.</p>
                <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">But dont worry, you can find plenty of other things on our homepage.</p>
                <a rel="noopener noreferrer" href={localizePath('/')} class="btn ml-4 text-gray-200">Back to homepage</a>
            </div>
        </div>
    </section>
</Layout>
